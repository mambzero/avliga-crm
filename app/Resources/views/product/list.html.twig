{% extends 'base.html.twig' %}

{% block stylesheets %}
    <!-- Custom styles for this page -->
    <link href="{{ asset('vendor/datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet">
{% endblock %}

{% block main %}
    <!-- Products DataTable -->
    <div class="card shadow mb-4">
        <div class="card-header d-flex justify-content-between py-3">
            <h6 class="h4 mb-0 text-gray-800">Products</h6>
            <a href="{{ path('products_add') }}" class="d-sm-inline-block btn btn-sm btn-primary shadow-sm abs-right-2 no-print"><i class="fas fa-arrow-alt-circle-left fa-sm text-white-50"></i> Add Product</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Product</th>
                        <th>ISBN</th>
                        <th>Price</th>
                        <th class="no-print">Actions</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Product</th>
                        <th>ISBN</th>
                        <th>Price</th>
                        <th class="no-print">Actions</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.title }}</td>
                            <td>{{ product.isbn }}</td>
                            <td>{{ product.price }}</td>
                            <td class="no-print">
                                <a href="{{ path('products_view', {id: product.id}) }}" class="btn btn-sm btn-info">View</a>
                                <a href="{{ path('products_edit', {id: product.id}) }}" class="btn btn-sm btn-success">Edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <!-- Page level plugins -->
    <script src="{{ asset('vendor/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>

    <!-- Page level custom scripts -->
    <script src="{{ asset('js/demo/datatables-demo.js') }}"></script>
{% endblock %}