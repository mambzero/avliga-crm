{% extends 'base.html.twig' %}

{% block main %}
    <div class="row">
        <!-- Product Data -->
        <div class="mb-4 col-lg-4 col-md-4">
            <img src="{{ product.image }}" width="100%" height="auto" />
        </div>
        <div class="card shadow mb-8 col-lg-8 col-md-6 p-0">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">{{ product.title }}</h6>
            </div>
            <div class="card-body">
                <p>ISBN: {{ product.isbn }}</p>
                <p>Price: {{ product.price }}</p>
                <p>Status: {{ product.status }}</p>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}

{% endblock %}

