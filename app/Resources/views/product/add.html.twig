{% extends 'base.html.twig' %}

{% block main %}
    <h1 class="h3 mb-2 text-gray-800">Add Product</h1>

    <div class="row">
        <div class="col-lg-6 col-md-6">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" name="product[title]" class="form-control" id="productName"
                           placeholder="Title...">
                </div>
                <div class="form-group">
                    <label>ISBN</label>
                    <input type="text" name="product[isbn]" class="form-control" id="productISBN"
                           placeholder="ISBN...">
                </div>

                <div class="form-group">
                    <label>Image File</label>
                    <input type="file" name="product[image]" class="form-control-file" id="productImage"
                           placeholder="Image File...">
                </div>

                <div class="form-group">
                    <label>Price</label>
                    <input type="number" name="product[price]" class="form-control" id="productPrice"
                           placeholder="Price..." step="any">
                </div>

                <div class="form-group">
                    <div class="custom-control custom-checkbox small">
                        <input type="checkbox" name="product[active]" value="1" class="custom-control-input" id="customCheck">
                        <label class="custom-control-label" for="customCheck">Active</label>
                    </div>
                </div>
                {{ form_row(form._token) }}
                <input type="submit" value="Add" class="btn btn-dark btn-group-sm">
            </form>
        </div>
    </div>
{% endblock %}

