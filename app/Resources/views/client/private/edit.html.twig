{% extends 'base.html.twig' %}

{% block main %}

    <h1 class="h3 mb-2 text-gray-800">Edit Private Client</h1>

    <div class="row">
        <div class="col-lg-6 col-md-6">
            <form method="post">

                <div class="form-group">
                    <label>Name{{ form_errors(form.responsiblePerson) }}</label>
                    <input type="text" name="private_person[responsiblePerson]" class="form-control" id="responsiblePerson"
                           placeholder="Name..." value="{{ privatePerson.name }}">
                </div>

                <div class="form-group">
                    <label>Address{{ form_errors(form.address) }}</label>
                    <input type="text" name="private_person[address]" class="form-control" id="companyAddress"
                           placeholder="Address..." value="{{ privatePerson.address }}">
                </div>

                <div class="form-group">
                    <label>Discount{{ form_errors(form.discount) }}</label>
                    <input type="number" name="private_person[discount]" class="form-control" id="uniqueIdentifier"
                           placeholder="Discount percentage..." step="any" value="{{ privatePerson.discount }}">
                </div>

                <div class="form-group">
                    <div class="custom-control custom-checkbox small">
                        <input type="checkbox" name="private_person[active]" value="1" class="custom-control-input" id="customCheckActive"{% if privatePerson.active %} checked {% endif %}>
                        <label class="custom-control-label" for="customCheckActive">Active</label>
                    </div>
                </div>

                {{ form_row(form._token) }}
                <div class="form-group d-flex justify-content-between">
                    <input type="submit" value="Edit Private Client" class="d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                    <a href="{{ path('clients_list') }}" class="d-sm-inline-block btn btn-sm btn-dark shadow-sm">Back <i class="fas fa-arrow-alt-circle-right fa-sm text-white-50"></i></a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}