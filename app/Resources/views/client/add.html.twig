{% extends 'base.html.twig' %}

{% block main %}

    <h1 class="h3 mb-2 text-gray-800">Add Client</h1>

    <div class="row">
        <div class="col-lg-6 col-md-6">
            <form method="post">
                <div class="form-group">
                    <label>Company{{ form_errors(form.company) }}</label>
                    <input type="text" name="client[company]" class="form-control" id="companyName"
                           placeholder="Name..." value="{{ form.vars.value.company }}">
                </div>
                <div class="form-group">
                    <label>Address{{ form_errors(form.address) }}</label>
                    <input type="text" name="client[address]" class="form-control" id="companyAddress"
                           placeholder="Address..." value="{{ form.vars.value.address }}">
                </div>

                <div class="form-group">
                    <label>Responsible Person{{ form_errors(form.responsiblePerson) }}</label>
                    <input type="text" name="client[responsiblePerson]" class="form-control" id="responsiblePerson"
                           placeholder="Responsible Person..." value="{{ form.vars.value.responsiblePerson }}">
                </div>

                <div class="form-group">
                    <label>Unique Identifier (EIK){{ form_errors(form.uniqueIdentifier) }}</label>
                    <input type="text" name="client[uniqueIdentifier]" class="form-control" id="uniqueIdentifier"
                           placeholder="Unique Identifier..." value="{{ form.vars.value.uniqueIdentifier }}">
                </div>

                <div class="form-group">
                    <label>Discount{{ form_errors(form.discount) }}</label>
                    <input type="number" name="client[discount]" class="form-control" id="uniqueIdentifier"
                           placeholder="Discount percentage..." step="any" value="{{ form.vars.value.discount > 0 }}">
                </div>

                <div class="form-group d-flex justify-content-between">
                    <div class="custom-control custom-checkbox small">
                        <input type="checkbox" name="client[vat]" value="1" class="custom-control-input" id="customCheckVat">
                        <label class="custom-control-label" for="customCheckVat">VAT</label>
                    </div>
                    <div class="custom-control custom-checkbox small d-none">
                        <input type="checkbox" name="client[active]" value="1" class="custom-control-input" id="customCheckActive" checked>
                        <label class="custom-control-label" for="customCheckActive">Active</label>
                    </div>
                </div>
                {{ form_row(form._token) }}
                <div class="form-group d-flex justify-content-between">
                    <input type="submit" value="Add Client" class="d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                    <a href="{{ path('clients_list') }}" class="d-sm-inline-block btn btn-sm btn-dark shadow-sm">Back <i class="fas fa-arrow-alt-circle-right fa-sm text-white-50"></i></a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

