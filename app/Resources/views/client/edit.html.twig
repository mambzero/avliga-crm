{% extends 'base.html.twig' %}

{% block main %}

    <h1 class="h3 mb-2 text-gray-800">Edit Client</h1>

    <div class="row">
        <div class="col-lg-6 col-md-6">
            <form method="post">
                <div class="form-group">
                    <label>Company</label>
                    <input type="text" name="client[company]" class="form-control" id="companyName"
                           placeholder="Name..." value="{{ client.company }}">
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" name="client[address]" class="form-control" id="companyAddress"
                           placeholder="Address..." value="{{ client.address }}">
                </div>

                <div class="form-group">
                    <label>Responsible Person</label>
                    <input type="text" name="client[responsiblePerson]" class="form-control" id="responsiblePerson"
                           placeholder="Responsible Person..." value="{{ client.responsiblePerson }}">
                </div>

                <div class="form-group">
                    <label>Unique Identifier (EIK)</label>
                    <input type="text" name="client[uniqueIdentifier]" class="form-control" id="uniqueIdentifier"
                           placeholder="Unique Identifier..." value="{{ client.uniqueIdentifier }}">
                </div>

                <div class="form-group">
                    <label>Discount</label>
                    <input type="number" name="client[discount]" class="form-control" id="uniqueIdentifier"
                           placeholder="Discount percentage..." step="any" value="{{ client.discount }}">
                </div>

                <div class="form-group">
                    <div class="custom-control custom-checkbox small">
                        <input type="checkbox" name="client[vat]" value="1" class="custom-control-input" id="customCheck"{% if client.vat == 1 %} checked {% endif %}>
                        <label class="custom-control-label" for="customCheck">VAT</label>
                    </div>
                </div>
                {{ form_row(form._token) }}
                <input type="submit" value="Edit" class="btn btn-dark btn-group-sm">
            </form>
        </div>
    </div>

{% endblock %}

