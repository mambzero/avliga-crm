{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/component-chosen.min.css') }}" rel="stylesheet">
{% endblock %}

{% block main %}

    <h1 class="h3 mb-2 text-gray-800">Edit Return</h1>

    <div class="row">
        <div class="col-lg-6 col-md-6">

            <form method="post">
                <div class="form-group">
                    <label>Client {{ form_errors(form.client) }}</label>
                    {{ form_widget(form.client, { 'attr': {'class': 'form-control chosen-plugin'} }) }}
                </div>

                <div class="form-group">
                    <label>Product{{ form_errors(form.product) }}</label>
                    {{ form_widget(form.product, { 'attr': {'class': 'form-control chosen-plugin'} }) }}
                </div>

                <div class="form-group">
                    <label>Quantity{{ form_errors(form.quantity) }}</label>
                    <input type="number" name="return[quantity]" class="form-control" id="entryQuantity"
                           placeholder="Quantity ..." step="1" value="{{ form.vars.value.quantity }}">
                </div>

                {{ form_row(form._token) }}
                <div class="form-group d-flex justify-content-between">
                    <input type="submit" value="Edit Return" class="d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                    <a href="{{ path('returns_list') }}" class="d-sm-inline-block btn btn-sm btn-dark shadow-sm">Back <i class="fas fa-arrow-alt-circle-right fa-sm text-white-50"></i></a>
                </div>
            </form>

        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/chosen.js') }}" type="text/javascript"></script>
    <script>
        $('.chosen-plugin').chosen();
    </script>
{% endblock %}