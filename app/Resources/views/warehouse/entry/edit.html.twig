{% extends 'base.html.twig' %}

{% block main %}

    <h1 class="h3 mb-2 text-gray-800">Edit Entry</h1>

    <div class="row">
        <div class="col-lg-6 col-md-6">

            <form method="post">
                <div class="form-group">
                    <label>Product{{ form_errors(form.product) }}</label>
                    {{ form_widget(form.product, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="form-group">
                    <label>Quantity{{ form_errors(form.quantity) }}</label>
                    <input type="number" name="entry[quantity]" class="form-control" id="entryQuantity"
                           placeholder="Quantity ..." step="1" value="{{ entry.quantity }}">
                </div>

                {{ form_row(form._token) }}
                <div class="form-group d-flex justify-content-between">
                    <input type="submit" value="Edit Entry" class="d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                    <a href="{{ path('entries_list') }}" class="d-sm-inline-block btn btn-sm btn-dark shadow-sm">Back <i class="fas fa-arrow-alt-circle-right fa-sm text-white-50"></i></a>
                </div>
            </form>

        </div>
    </div>

{% endblock %}