{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/component-chosen.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/tooltip.css') }}" rel="stylesheet">
{% endblock %}

{% macro printDetailRow(form) %}
    <td>
        <span tabindex="0" data-toggle="tooltip" data-html="true" data-placement="right"
              title="{{ form_errors(form.product) }}">
            {{ form_widget(form.product, { 'attr': {'class': 'form-control chosen-plugin'} }) }}
        </span>
    </td>
    <td>
        <span tabindex="0" data-toggle="tooltip" data-html="true" data-placement="right"
              title="{{ form_errors(form.quantity) }}">
            {{ form_widget(form.quantity, { 'attr': {'class': 'form-control'} }) }}
        </span>
    </td>
    <td>
        <span tabindex="0" data-toggle="tooltip" data-html="true" data-placement="right"
              title="{{ form_errors(form.discount) }}">
            {{ form_widget(form.discount, { 'attr': {'class': 'form-control'} }) }}
        </span>
    </td>
    <td>
        <span tabindex="0" data-toggle="tooltip" data-html="true" data-placement="right"
              title="{{ form_errors(form.price) }}">
            {{ form_widget(form.price, { 'attr': {'class': 'form-control'} }) }}
        </span>
    </td>
    <td><a href="#" class="remove-detail"><i class="fas fa-times-circle fa-lg text-danger pt-2"></i></a></td>
{% endmacro %}

{% import _self as formMacros %}

{% block main %}

    <h1 class="h3 mb-2 text-gray-800">Edit Order: {{ form.vars.value.id }}</h1>

    <div class="row">
        <div class="col-lg-7 col-md-7">
            <form method="post">
                <div class="form-row">
                    <div class="form-group col">
                        <label>Company{{ form_errors(form.client) }}</label>
                        {{ form_widget(form.client, { 'attr': {'class': 'form-control chosen-plugin'} }) }}
                    </div>
                </div>

                <div class="form-group">

                    <!-- Dropdown Card Example -->
                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <div class="dropdown no-arrow">
                                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <h6 class="m-0 font-weight-bold text-primary">Products</h6>
                                </a>
                                <div class="dropdown-menu dropdown-menu-left shadow animated--fade-in"
                                     aria-labelledby="dropdownMenuLink">
                                    <div class="dropdown-header">Dropdown Header:</div>
                                    <a class="dropdown-item" href="#">Action</a>
                                    <a class="dropdown-item" href="#">Another action</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Something else here</a>
                                </div>
                            </div>
                            <a href="#" class="d-sm-inline-block btn btn-sm btn-primary shadow-sm"
                               id="add_product">
                                <i class="fas fa-plus-circle fa-sm text-white-50"></i> Add Product
                            </a>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body p-0" id="products_list">
                            <div class="details">
                                <table id="details" class="table"
                                       data-prototype="{{ formMacros.printDetailRow(form.details.vars.prototype)|spaceless|e('html_attr') }}"
                                       data-index="{{ max(form.details|keys) }}">
                                    <thead>
                                    <tr>
                                        <th width="50%">Title</th>
                                        <th>Quantity</th>
                                        <th>Discount</th>
                                        <th>Price</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {# iterate over each existing tag and render its only field: name #}
                                    {% for key, details in form.details|krsort %}
                                        <tr id="order_details_{{ key }}">
                                            {{ formMacros.printDetailRow(details) }}
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>

                {{ form_row(form._token) }}
                <input type="submit" value="Edit" class="btn btn-dark btn-group-sm">
            </form>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/chosen.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/order-form.js') }}" type="text/javascript"></script>
    <script>
        $('[data-toggle="tooltip"]').tooltip({
            trigger: 'hover'
        });
    </script>
{% endblock %}